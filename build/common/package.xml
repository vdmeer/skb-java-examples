<?xml version="1.0" encoding="UTF-8"?>
<project name="package-common" xmlns:ivy="antlib:org.apache.ivy.ant">

	<import file="common.xml"/>

	<!-- Main targets -->
	<target name="package" description="Copies all external and created artifacts to a packaging location.  Unless overriden, copies nothing (common).">
		<echo message="${ant.project.name} contributed no artifacts to packaging.  To contribute, override the 'package' target in the bundle." />
	</target>

	<target name="copy-ext-jars" depends="ivy.init" description="Copies the external jars to a location (common).">
		<ext-jars output.dir="${copy.to.dir}"/>
	</target>

<!--
	<target name="copy-dist-jar" depends="ivy.init" description="Copies the distributable jar to a location (common).">
		<dist-jar output.dir="${copy.to.dir}"/>
	</target>

	<target name="copy-provided-jars" depends="ivy.init" description="Copies the provided jars to a location (common).">
		<provided-jars output.dir="${copy.to.dir}"/>
	</target>

	<target name="copy-provided-libs" depends="ivy.init" description="Copies the provided libs to a location (common).">
		<provided-libs output.dir="${copy.to.dir}"/>
	</target>
-->

	<!-- Macros -->
	<macrodef name="dist-jar">
		<attribute name="output.dir" default="${package.dist.dir}"/>
		<sequential>
			<mkdir dir="@{output.dir}"/>
			<copy file="${jar.output.file}" tofile="@{output.dir}/${package.jar.output.file}"/>
		</sequential>
	</macrodef>

	<macrodef name="src-jar">
		<attribute name="output.dir" default="${package.src.dir}"/>
		<sequential>
			<mkdir dir="@{output.dir}"/>
			<copy file="${source-jar.output.file}" tofile="@{output.dir}/${package.source-jar.output.file}"/>
		</sequential>
	</macrodef>

	<macrodef name="javadoc-jar">
		<attribute name="output.dir" default="${package.docs.dir}"/>
		<sequential>
			<mkdir dir="@{output.dir}"/>
			<copy file="${javadoc-jar.output.file}" tofile="@{output.dir}/${package.javadoc-bundle.output.file}"/>
		</sequential>
	</macrodef>

	<macrodef name="release-package">
		<attribute name="output.dir" default="${package.release.dir}/${ant.project.name}/${bundle.version}"/>
		<sequential>
			<mkdir dir="@{output.dir}"/>
			<copy file="${jar.output.file}" tofile="@{output.dir}/${package.jar.output.file}"/>
			<copy file="${source-jar.output.file}" tofile="@{output.dir}/${package.source-jar.output.file}"/>
			<copy file="${javadoc-jar.output.file}" tofile="@{output.dir}/${package.javadoc-bundle.output.file}"/>
			<copy file="${pom.output.file}" tofile="@{output.dir}/${package.pom.output.file}"/>
		</sequential>
	</macrodef>

	<macrodef name="ext-jars">
		<attribute name="output.dir" default="${package.lib.dir}"/>
		<sequential>
			<mkdir dir="@{output.dir}"/>
			<ivy:retrieve resolveId="runtime.classpath" conf="runtime" type="jar" pattern="@{output.dir}/[artifact]-[revision].[ext]" log="download-only" overwriteMode="never"/>
		</sequential>
	</macrodef>

</project>