<assembly>
	<id>application</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>/lib/java</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/application/etc</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>/etc</outputDirectory>
			<fileMode>644</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/bundle/doc</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>/doc</outputDirectory>
			<fileMode>644</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}</directory>
			<includes>
				<include>*.html</include>
			</includes>
			<outputDirectory>/doc</outputDirectory>
			<fileMode>644</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/application/bin</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>755</fileMode>
		</fileSet>
	</fileSets>
</assembly>
